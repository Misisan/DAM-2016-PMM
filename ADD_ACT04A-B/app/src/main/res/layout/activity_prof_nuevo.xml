<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_prof_nuevo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="masimeon.add_03c.florida.add_act03c.EstNuevoActivity"
    android:orientation="vertical"
    android:columnCount="2">

    <Button
        android:text="AÃ±adir nuevo profesor"
        android:layout_width="match_parent"
        android:id="@+id/btn_crearProfesor"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"/>


    <TextView
        android:text="Nombre:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_columnWeight="1"
        android:id="@+id/etq_newNombreP" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/txt_newNombreP"
        android:gravity="center"/>

    <TextView
        android:text="Edad:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_columnWeight="1"
        android:id="@+id/etq_newEdadP" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/txt_newEdadP"
        android:gravity="center"/>

    <TextView
        android:text="Ciclo:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_columnWeight="1"
        android:id="@+id/etq_newCicloP" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/txt_newCicloP"
        android:gravity="center"/>

    <TextView
        android:text="Curso Tutor:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_columnWeight="1"
        android:id="@+id/etq_newCursoP" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/txt_newCursoP"
        android:gravity="center"/>

    <TextView
        android:text="Despacho:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_columnWeight="1"
        android:id="@+id/etq_newNotaP" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/txt_newNotaP"
        android:gravity="center"/>

</GridLayout>
