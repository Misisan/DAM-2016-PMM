<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_est_nuevo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="masimeon.add_03c.florida.add_act03c.EstNuevoActivity"
    android:orientation="vertical"
    android:columnCount="2">

    <Button
        android:text="AÃ±adir nuevo estudiante"
        android:layout_width="match_parent"
        android:id="@+id/btn_crearEstudiante"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"/>


    <TextView
        android:text="Nombre:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_columnWeight="1"
        android:id="@+id/etq_newNombre" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/txt_newNombre"
        android:gravity="center"/>

    <TextView
        android:text="Edad:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_columnWeight="1"
        android:id="@+id/etq_newEdad" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/txt_newEdad"
        android:gravity="center"/>

    <TextView
        android:text="Ciclo:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_columnWeight="1"
        android:id="@+id/etq_newCiclo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/txt_newCiclo"
        android:gravity="center"/>

    <TextView
        android:text="Curso:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_columnWeight="1"
        android:id="@+id/etq_newCurso" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/txt_newCurso"
        android:gravity="center"/>

    <TextView
        android:text="Nota media:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_columnWeight="1"
        android:id="@+id/etq_newNota" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/txt_newNota"
        android:gravity="center"/>

</GridLayout>
