<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.migue.di_linearlayout.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:padding="5dp">

            <TextView
                android:text="rojo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_dark"
                android:textColor="#fff"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:id="@+id/textColorR" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp">

            <TextView
                android:text="verde"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark"
                android:textColor="#000"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:id="@+id/textColorG" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp">

            <TextView
                android:text="azul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:id="@+id/textColorB"
                android:background="#0008ff" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp">

            <TextView
                android:text="amarillo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:id="@+id/textColorY"
                android:background="#ffee00" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:background="#0f0"
        android:weightSum="4">


        <TextView
            android:text="columna_uno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_purple"
            android:textColor="#fff"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:id="@+id/textColum01" />
        <TextView
            android:text="columna_dos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_purple"
            android:textColor="#fff"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:id="@+id/textColum02" />
        <TextView
            android:text="columna_tres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_purple"
            android:textColor="#fff"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:id="@+id/textColum03" />
        <TextView
            android:text="columna_cuatro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_purple"
            android:textColor="#fff"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:id="@+id/textColum04" />
    </LinearLayout>
</LinearLayout>
