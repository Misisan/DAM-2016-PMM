<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="masimeon.pmm_p05.florida.pmm_p05.FragmentPerfil"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="4"
    android:background="@color/fondoMathDice"
    android:padding="10dp">


    <TextView
        android:text="Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/perfil_nombre"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:textColor="@color/txt_tit"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:id="@+id/perfil_txtNombre"
        android:layout_weight="1"
        android:layout_marginBottom="30dp"
        android:textColor="@color/txt_tit"/>

    <TextView
        android:text="Apodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/perfil_nick"
        android:layout_weight="1"
        android:textColor="@color/txt_tit"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:id="@+id/perfil_txtNick"
        android:layout_weight="1"
        android:layout_marginBottom="30dp"
        android:textColor="@color/txt_tit"/>

    <Button
        android:text="AÃ±adir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/perfil_btnadd"
        android:layout_weight="1"
        android:background="#f50000"/>
</LinearLayout>
