<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="5dp"
    android:layout_marginLeft="15dp"
    android:weightSum="2"
    android:id="@+id/item_listajugadores_todo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/item_listajugadores_img"
        android:paddingLeft="20dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.3"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:weightSum="2"
        android:id="@+id/itemlistajugadores_txt_base">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/itemlistajugadores_txt"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:background="#fff"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/itemlistajugadores_txt2"
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:background="#fff"
                android:paddingTop="5dp"
                android:layout_weight="0.5"
                android:paddingLeft="30dp"/>
        </LinearLayout>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/itemlistajugadores_txt_puntos"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:background="#fff"
            android:paddingTop="30dp"
            android:layout_weight="1.3"
            android:paddingRight="5dp" />
    </LinearLayout>

</LinearLayout>