<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    tools:context="masimeon.pmm_final.florida.pmm_final.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/fondoMathDice"
    android:weightSum="3">

    <!-- Fragment estático -->
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="masimeon.pmm_final.florida.pmm_final.FragmentMenu"
        android:id="@+id/fragment_menu_padre"
        tools:layout="@layout/fragment_menu"
        android:layout_weight="2"/>

    <!--Fragment dinámico -->
    <FrameLayout android:id="@+id/fragment_contenido"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
